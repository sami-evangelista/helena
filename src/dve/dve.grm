%left IMPLY
%left OR
%left AND
%left OR_BIT
%left XOR
%left AND_BIT
%left EQ NEQ
%left NOT
%left INF INF_EQ SUP SUP_EQ
%left LSHIFT RSHIFT
%left MINUS PLUS
